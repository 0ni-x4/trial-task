generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EssayAssist {
  id                 String                 @id @default(uuid())
  currentContent     String
  lastReviewData     Json?
  lastReviewAt       DateTime?
  updatedAt          DateTime @updatedAt
  createdAt          DateTime @default(now())
  appliedSuggestions Json   @default("[]")
  prompt             String?
  essayType          String?
  maxWords           Int?
  wordCount          Int?
  status             String?
  history            Json?    @default("[]")
  messages           EssayAssistMessage[]
  
  // New fields for improved diff and scoring systems
  diffSystemState    Json?                   // Serialized EssayDiffSystem state
  scoringSystemState Json?                   // Serialized ProgressiveScoringSystem state
  reviewHistory      Json?    @default("[]") // History of all reviews with scores
}

model EssayAssistMessage {
  id             String   @id @default(uuid())
  essayAssistId  String
  essayAssist    EssayAssist @relation(fields: [essayAssistId], references: [id])
  role           String
  content        String
  highlights     Json      @default("[]")
  createdAt      DateTime  @default(now())
} 